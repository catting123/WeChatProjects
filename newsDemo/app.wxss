/**app.wxss**/
/* 新闻列表区域样式 */
/* 2-1 新闻列表容器 */
#news-list {
  min-height: 600rpx;
  padding: 15rpx;
}
/* 2-2 项目列表 */
.list-item {
  display: flex;
  flex-direction: row;
  border-bottom: 1rpx solid gray;
}
/* 2-3 新闻图片 */
.list-item image {
  width: 230rpx;
  height: 150rpx;
  margin: 10rpx;
}
/* 2-4 新闻标题 */
.list-item text {
  width: 100%;
  height: 150rpx;
  margin: 10rpx;
  font-size: 10pt;
}